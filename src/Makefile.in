include @top_srcdir@/Makefile.init

INCLPATH = -I. \
           -I.. \
           -I./engine \
           -I./register \
           -Ireports \
           -I@srcdir@/../include \
           -I@prefix@/include

GNOME_CFLAGS += -I./gnome
MOTIF_CFLAGS += -I./motif

CFLAGS = @CFLAGS@ @X_CFLAGS@ ${INCLPATH} ${CPPFLAGS}

######################################################################
# See Makefile.common for information about these variables.
COMMON_SRCS   := MultiLedger.c SplitLedger.c Destroy.c
CLEAN_SUBDIRS := engine gnome motif register g-wrap guile reports swig qt scm
MOTIF_SRCS := FileDialog.c Refresh.c
GNOME_SRCS := FileDialog.c Refresh.c
######################################################################

all: default

# This inclusion must come after the first target, and after the
# definitions of *_SRCS, etc., but before the usage of *_OBJS.
include @top_srcdir@/Makefile.common

default: $(OBJS)

motif motif.static: ${MOTIF_OBJS}
	@cd engine;            $(MAKE) default
	@cd register;          $(MAKE) motif
	@cd reports;           $(MAKE) default
	@cd g-wrap;            $(MAKE) motif
	@cd swig;              $(MAKE) motif
	@cd guile;             $(MAKE) default
	@cd motif;             $(MAKE) $@

gnome gnome.static: ${GNOME_OBJS}
	@cd engine;            $(MAKE) default
	@cd register;          $(MAKE) gnome
	@cd reports;           $(MAKE) default
	@cd g-wrap;            $(MAKE) gnome
	@cd swig;              $(MAKE) gnome
	@cd guile;             $(MAKE) default
	@cd gnome;             $(MAKE) $@

qt: $(QT_OBJS)
	@cd engine;            $(MAKE) default
	@cd register;          $(MAKE) qt
	@cd reports;           $(MAKE) default
	@cd g-wrap;            $(MAKE) qt
	@cd swig;              $(MAKE) qt
	@cd guile;             $(MAKE) default 	
	@cd qt;                $(MAKE) qt

.PHONY: default qt gnome gnome.static motif motif.static all
