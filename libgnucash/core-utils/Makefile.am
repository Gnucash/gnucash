  binreloc.c \
  gnc-prefs.c \
  gnc-environment.c \
  gnc-filepath-utils.cpp \
  gnc-gkeyfile-utils.c \
  gnc-glib-utils.c \
  gnc-guile-utils.c \
  gnc-jalali.c \
  gnc-locale-utils.c \
  gnc-path.c \
  swig-core-utils-guile.c

